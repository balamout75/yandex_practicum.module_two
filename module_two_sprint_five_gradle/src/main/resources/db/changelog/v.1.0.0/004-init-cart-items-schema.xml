<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="create_cart_items_table" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <tableExists tableName="cart_items"/>
            </not>
        </preConditions>
	<createTable tableName="cart_items">
            <column defaultValueNumeric="1" name="user_id" type="BIGINT">
		<constraints nullable="false" primaryKey="true" primaryKeyName="cart_items_pkey"/>
            </column>
            <column name="item_id" type="BIGINT">
		<constraints nullable="false" primaryKey="true" primaryKeyName="cart_items_pkey"/>
            </column>
            <column defaultValueNumeric="0" name="count" type="BIGINT">
		<constraints nullable="false"/>
            </column>
        </createTable>        
	<rollback>
            <dropTable tableName="cart_items"/>
        </rollback>
    </changeSet>

    <changeSet id="create_cart_items_foreign_key_user" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_cart_items_user"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="cart_items"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
				 onDelete="CASCADE"
                                 constraintName="fk_cart_items_user"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="cart_items" constraintName="fk_cart_items_user"/>
        </rollback>
    </changeSet>

    <changeSet id="create_cart_items_foreign_key_item" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_cart_items_item"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="cart_items"
                                 baseColumnNames="item_id"
                                 referencedTableName="items"
                                 referencedColumnNames="id"
				 onDelete="CASCADE"
                                 constraintName="fk_cart_items_item"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="cart_items" constraintName="fk_cart_items_item"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
