<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="create_order_items_table" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <tableExists tableName="order_items"/>
            </not>
        </preConditions>
	<createTable tableName="order_items">
            <column name="order_id" type="BIGINT">
		<constraints nullable="false" primaryKey="true" primaryKeyName="order_items_pkey"/>
            </column>
            <column name="item_id" type="BIGINT">
		<constraints nullable="false" primaryKey="true" primaryKeyName="order_items_pkey"/>
            </column>
            <column defaultValueNumeric="0" name="count" type="BIGINT">
		<constraints nullable="false"/>
            </column>
        </createTable>        
	<rollback>
            <dropTable tableName="order_items"/>
        </rollback>
    </changeSet>

    <changeSet id="create_order_items_foreign_key_order" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_order_items_order"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="order_items"
                                 baseColumnNames="order_id"
                                 referencedTableName="orders"
                                 referencedColumnNames="id"
				 onDelete="CASCADE"
                                 constraintName="fk_order_items_order"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="order_items" constraintName="fk_order_items_order"/>
        </rollback>
    </changeSet>

    <changeSet id="create_order_items_foreign_key_item" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_order_items_item"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="order_items"
                                 baseColumnNames="item_id"
                                 referencedTableName="items"
                                 referencedColumnNames="id"
				 onDelete="CASCADE"
                                 constraintName="fk_order_items_item"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="order_items" constraintName="fk_order_items_item"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
