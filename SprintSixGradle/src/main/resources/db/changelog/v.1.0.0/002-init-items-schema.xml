<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

     <changeSet id="create_items_sequence" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <sequenceExists sequenceName="items_sequence"/>
            </not>
        </preConditions>
        <createSequence sequenceName="items_sequence" incrementBy="1"/>
        <rollback>
            <dropSequence sequenceName="items_sequence"/>
        </rollback>
     </changeSet>

     <changeSet id="create_items_table" author="Ivan Vasilyev">
        <preConditions>
            <not>
                <tableExists tableName="items"/>
            </not>
        </preConditions>
        <createTable tableName="items">
	    <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="items_pkey"/>
            </column>		
            <column name="title" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="imgpath" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
	    <column defaultValueNumeric="0" name="price" type="BIGINT"/>	    
            <column defaultValueNumeric="0" name="quantity" type="BIGINT"/>
        </createTable>
        <rollback>
            <dropTable tableName="items"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
